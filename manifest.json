{
  "manifest_version": 3,
  "name": "Chronos",
  "version": "1.0",
  "description": "Track the time you spend on each website and tab",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "alarms",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chronos"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}